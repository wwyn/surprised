page{
	background-color: #fafafa;
}
.search-bar{
	background-color: #ffffff;
	border:none;
  display:flex;
  padding:0 30rpx;
}
.cancel-index{
	font-size:12px;
	line-height: 30px;
	color: #999;
	display:flex;
	align-items:center;
	flex-direction:row;
	justify-content:flex-start;
	width: 30px;
}
.search-bar__box{
  /* padding-left:10px; */
  width:600rpx;
  height:60rpx;
  background:#eee;
  border-radius:30rpx;
  position:relative;
}
.search-bar__box icon{
  /* margin-left:26rpx; */
}
.search-bar__box input{
  font-size:28rpx;
  margin-left:60rpx;
  line-height:60rpx;
}
.weui-icon-clear{
  z-index:9999;
}
.search-btn{
  font-size:28rpx;
  color:#333;
  line-height:60rpx;
  margin-left:30rpx;
}
.title{
	font-size: 28rpx;
	font-weight: 400;
	color: #333;
	margin: 24rpx 30rpx;
}
.hotsearch-items{
	padding: 0 15px;
    overflow: hidden;
    list-style: none;
}
.item{
	float: left;
	background-color: #EBEBEB;
	overflow: hidden;
  margin-right:18rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	display: inline-block;
	max-width: 100%;
  line-height:60rpx;
	border-radius: 2rpx;
  font-size:26rpx;
	color: #999;
  padding:0 26rpx;
  margin-bottom:18rpx;
}
.hotsearch-block>.hotsearch-items .item{
	border-color: rgb(251,196,209);
	color: #FC4773;
}
.trash-icon{
	width: 20px;
	float: right;
	margin-right: 15px;
	margin-top: 10px;
}

