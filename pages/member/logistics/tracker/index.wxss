page{
    background: #efefef;
    font-size: 14px;
}
.order-item-panel{

    display: flex;
    align-items: center;
    flex-direction: row;
    padding: 10px 15px 5px 15px;
    background: #f9f9f9;
}
.copy{
  float: right;
  color: #fff;
  margin-right: 30rpx;
}
.item-desc{
    font-size: 13px;
}
.item-image{
    width: 45px;
    height: 75px;
    margin-right: 5px;
}
.logi-logo{
    width: 120px;
    height: 32px;
}
.item-image image{
    width: 45px;
    height: 45px;
    border: 1px #e9e9e9 solid;
    border-radius: 2px;
}
.item-image .sendnum{
    font-size: 9px;
    color: #666;
    text-align: center;
}
.logistics-logs{
  margin-top:10px;
}
.logistics-logs .time{
    font-size: 15px;
    line-height: 25px;
    color: #999;
    text-align:center;
}
.logistics-logs .line{
  line-height:25px;
  background-position:center center;
  background-repeat: no-repeat;
  color:#fff;
  padding:10px 0;
  background-size:1px 25px;
}
.logistics-logs .time:nth-child(2){
  font-size:12px;
  color:#999;
}
.logistics-logs .current-cell .time:nth-child(1){
  color:#333;
}
.logistics-logs  .weui-cell__hd{
  width:75px;
}
.logistics-logs  .weui-cell{
  padding:0 15px;
}
.logistics-logs  .context{
  color:#999;
  font-size:15px;
  line-height:23px;
}
.logistics-logs .current-cell .context{
  color:#333;
}
.info-top{
    width:100%;
    height:218rpx;
    background:#FF7294;
    display:flex;
    align-items: center;
}
.weui-panel:before,.weui-panel:after{
    border:0;
}
.weui-cell:after,.weui-cell:before{
   border:0;
}
.info-head{
    overflow:hidden;
    width:140rpx;
    height:140rpx;
    margin-left:35rpx;
    position:relative;
}
.info-head .num-total{
    position:absolute;
    bottom:0;
    left:0;
    right:0;
    background:rgba(0,0,0,0.8);
    color:#fff;
    font-size:10px;
    text-align:center;
}
.info-head image{
    width:140rpx;
    height:140rpx;
}
.info-img image{
    width:67rpx;
    height:60rpx;
    margin-right:35rpx;
}
.info-mess{
    color:#fff; 
    font-size:26rpx;
    margin-left:10px;
}
.info-mess:nth-child(1){
    font-size:28rpx;
}