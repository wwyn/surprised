  width: 100%;
  height: 100%;
  text-align: center;
}
.empty_img{
  width: 482rpx;
  height: 446rpx;
  border: none;
  margin:394rpx 138rpx 46rpx 130rpx;
}
.empty_text{
  font-family: PingFangSC;
  font-weight: Regular;
  color: RGBA(252, 71, 115, 0.48);
