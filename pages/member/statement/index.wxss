/* 有数据 */
.statement_all{
  width: 100%;
  height: 88rpx;
  background: RGBA(250, 250, 250, 1);
}
.statement_all>text{
  font-family: PingFangSC;
  font-weight: Regular;
  color: RGBA(252, 71, 115, 1);
  font-size: 30rpx;
  line-height: 80rpx;
  margin-left: 30rpx;

}
.statement_list{
 background: #fff
}
.statement_one{
  width: 100%;
  height: 156rpx;
  border: 1rpx solid #fff;
}
.order_number{
 float: left;
 width: 65%;
}
.order_number1{
  display: block;
  float: left;
  font-family: PingFangSC;
  font-weight: Regular;
  color: RGBA(51, 51, 51, 1);
  font-size: 24rpx;
  line-height: 34rpx;
  margin:38rpx 10rpx 0 30rpx;
}
.order_number2{
  display: block;
  width: 400rpx;
  font-family: PingFangSC;
  font-weight: Regular;
  color: RGBA(51, 51, 51, 1);
