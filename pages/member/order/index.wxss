page {
  background: #fafafa;
}

.weui-navbar {
  background: #fff;
}

.order-item.weui-panel:after, .order-item.weui-panel:before,
.weui-panel__ft:after {
  border: 0;
}

.weui-panel__hd {
  /* padding: 7px 15px 5px; */
  padding: 0 30rpx;
  line-height: 70rpx;
  color: #333;
  font-size: 28rpx;
}

.weui-bar__item_on {
  padding-bottom: 1px;
  border-bottom: 1px #fc4773 solid;
}

.weui-navbar__title {
  font-size: 28rpx;
  color: #666;
}

.weui-bar__item_on .weui-navbar__title {
  color: #fc4773;
}

.order-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
}

.status {
  color: #fc4773;
}

.weui-panel__hd:after {
  display: none;
}

.weui-panel__bd {
  border-bottom: 1px #e9e9e9 solid;
  border-top: 1px #e9e9e9 solid;
  background: #fcfcfc;
}

.weui-panel__ft {
  text-align: right;
  font-size: 13px;
  padding: 7px 15px;
}

.order-list {
  padding-top: 44px;
}

.order-list .order-item .dead {
  opacity: 0.8;
  -webkit-filter: grayscale(100%);
}

.order-item-panel {
  display: flex;
  align-items: center;
  flex-direction: row;
  padding: 20rpx 30rpx 10rpx 30rpx;
}

.item-name {
  font-size: 26rpx;
  color: #333;
  line-height: 34rpx;
  height: 68rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-desc text {
  font-size: 24rpx;
  color: #999;
  float: right;
}

.item-price {
  color: #fc4773;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price>view:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.item-image image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  /* border: 1px #e9e9e9 solid; */
  border-radius: 2px;
}

.order-detail {
  flex: auto;
}

button {
  margin-left: 10px;
}

.prompt-panel-new {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top: 266rpx;
}

.icon-empty {
}

.list-null {
  width: 457rpx;
  margin: 0 auto;
  display: block;
}

.empty-tips {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #999;
  margin-top: 79rpx;
}

.empty-tips view {
  margin-right: 8px;
  color: rgba(252, 71, 115, 0.48);
}

.empty-tips navigator {
  color: #ec627e;
}

.right {
  width: 15rpx;
}

.cart-remark {
  line-height: 40rpx;
  color: #999;
  font-size: 24rpx;
  padding: 12rpx 0;
  padding-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
}

.cart-remark:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #ebebeb;
  color: #ebebeb;
}

.cart-remark text {
  font-size: 26rpx;
  color: #333;
}

.order-total-block {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  color: #333;
  font-size: 12px;
}

.handle-block-order {
  padding: 10rpx 30rpx;
  /* border-bottom: 1px solid #eee; */
}

.media-box-actions button {
  margin-left: 10px;
  margin-top: 0;
  width: 140rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0;
  font-size: 12px;
  color: #666;
}

.red-btn {
  border-color: #fc4773 !important;
  color: #fc4773 !important;
}
