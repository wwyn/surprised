  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.button-pay {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  margin: 0;
  border-radius: 0;
  background-color: #fc4773 !important;
}

.button-pay:after {
  border-radius: 0;
}

.weui-panel:before {
  border: none;
}

.weui-media-box_appmsg:before {
  border: none;
}

.weui-cell:before, .weui-panel:after {
  border: none;
}

.weui-cell__hd {
  font-size: 14px;
  color: #333;
}

.order-status {
  color: #fc4773;
  font-size: 14px;
}

.payapp-cell {
  padding: 10px 15px 5px 15px;
}

.payapp-cell .weui-cell__hd {
  font-size: 14px;
  color: #999;
}

.payapp-cell .weui-cell__ft {
  font-size: 14px;
  color: #666;
}

.total-price {
  color: #fc4773;
}

.aftersales-btn {
  border-color: #fc4773 !important;
  color: #fc4773 !important;
  width: 70px;
  height: 24px;
  line-height: 24px;
  text-align: center;
  padding: 0 !important;
}

.wallet, .nothing {
  width: 32rpx;
  margin-right: 0.8em;
}

.nothing {
  height: 13rpx;
  display: inline-block;
}

.cart-remark {
  line-height: 40rpx;
  color: #999;
  font-size: 24rpx;
  padding: 12rpx 0;
  padding-left: 30rpx;
  padding-right: 30rpx;
  position: relative;
}

.cart-remark:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #ebebeb;
  color: #ebebeb;
}

.cart-remark text {
  font-size: 26rpx;
  color: #333;
}

.cart-remark_right {
  float: right;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1rpx solid RGBA(252, 71, 115, 1);
  font-family: PingFangSC;
  font-weight: Regular;
  color: RGBA(252, 71, 115, 1);
  font-size: 24rpx;
}

