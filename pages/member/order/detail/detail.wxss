page {
  background: #fafafa;
  padding-bottom: 55px;
}

.weui-media-box__hd_in-appmsg {
  line-height: 1;
}

.location-box {
  width: 20px;
  margin-top: 10px;
}

.location-box {
  width: 20px;
}

.location-box image {
  width: 20px;
  height: 20px;
}

.name-and-mobile {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.name-and-mobile .mobile {
  margin-left: 10px;
  display: inline-block;
  color: #fc4773;
  font-size: 24rpx;
  position: relative;
  padding-right: 10px;
}

.name-and-mobile .mobile:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 1.5px 1.5px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.area {
  margin-top: 19rpx;
  font-size: 26rpx;
  color: #666;
}

.name-and-mobile .name text {
  color: #666;
}

.weui-cell__ft_in-access {
  font-size: 14px;
}

.co-item {
  padding-right: 25px;
}

.co-name {
  color: #333;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  line-height: 34rpx;
  height: 68rpx;
  font-size: 26rpx;
}

.goods-name {
  width: 70%;
}

.goods-price {
  color: #333;
}

.co-price {
  line-height: 22px;
  color: #f60;
  font-weight: lighter;
  font-stretch: ultra-condensed;
}

.co-price text {
  color: #999;
}

.co-inline {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 28rpx;
}

.goods-promotion {
  line-height: 25px;
}

.order-promotion .weui-cell_link {
  color: #666;
}

.cart-total {
  font-size: 12px;
  text-align: right;
  display: block;
}

.cart-total .price {
  color: #f60;
  font-size: 14px;
  font-weight: lighter;
}

.co-item .weui-media-box__hd {
  width: 150rpx;
  height: 150rpx;
}

